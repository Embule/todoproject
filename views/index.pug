extends layout

block content
  script.
    let avaaIkkuna = function() {
      document.getElementById("myPopup").style.display = "block";
    }
    let suljeIkkuna = function() {
      document.getElementById("myPopup").style.display = "none";
    }
  h1= title
  div(class="container")
    div(class="row")
      div(class="col-sm")
        p Syötä tehtävä
        form#formcreatetask(method="post",action="/addtask")
          input#formtask(type="text", placeholder="Tehtävä", name="task" required)
        form(action="").form-inline
        .form-group.col-md-4
        textarea(rows=3).form-control
          | Muokkaa
        div(class="select_box_area")
          p(class="select")
            span(class="placeholder")
              | Tärkeys
            em(class="fa fa-angle-down")
          ul(class="filter_list")
            li
              label
                input(type="checkbox")
                | Kiireellinen   
          button#formsubmit(type="submit") Create
          .container-fluid
      div(class="col-sm")
        ul
          for item in tehtavat
            li
              =item.task
              div#myPopup(class="edit-popup")
                form(method="post" action="/edit" class="popupContainer")
                  h1 Editoi
                  input#otsikko(type="text", placeholder="Tehtävä", name="task")
                  input(type="hidden", name="id", value=item.id)
                  button(class="btn Cancel" "onclick"="suljeIkkuna()") Sulje
                  button(type="submit" class="btn Edit") Edit
                  button(class="btn Remove")
                    a(href="http://localhost:3000/delete?id=" + item.id) Remove
                button(class="btnOpen" "onclick"="avaaIkkuna()") Muokkaa
      div(class="col-sm")
        p Kolmas palsta
      div(class="col-sm")
        p Neljäs palsta

  

